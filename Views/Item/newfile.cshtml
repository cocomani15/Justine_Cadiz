@model webdev.Models.item
<div class="container-fluid">
    <div class="col-lg-8 col-xlg-9 col-md-7">
                        <div class="card">
                            <div class="card-body">
                                <form method="post" class="form-horizontal form-material mx-2">
                                   <div class="form-group">
                                        <label asp-for="Name" class="col-md-12 mb-0"></label>
                                        <div class="col-md-12">
                                            <input asp-for="Name" type="text"
                                                class="form-control ps-0 form-control-line">
                                                </div>
                                        </div>
                                          <span asp-validation-for="Name"></span>
                                      <div class="form-group">
                                        <label asp-for="Age" class="col-md-12 mb-0"></label>
                                        <div class="col-md-12">
                                            <input asp-for="Age" type="text"
                                                class="form-control ps-0 form-control-line">
                                                </div>
                                        </div>
                                          <span asp-validation-for="Age"></span>
                                    <div class="form-group">
                                        <label asp-for="Gender" class="col-md-12 mb-0"></label>
                                        <div class="col-md-12">
                                            <input asp-for="Gender" type="text"
                                                class="form-control ps-0 form-control-line">
                                                </div>
                                        </div>
                                          <span asp-validation-for="Gender"></span>
                                    <div class="form-group">
                                        <label asp-for="Birthday" class="col-md-12 mb-0"></label>
                                        <div class="col-md-12">
                                            <input asp-for="Birthday" type="text"
                                                class="form-control ps-0 form-control-line">
                                                </div>
                                                <span asp-validation-for="Birthday"></span>
                                                </div>
                                                <div class="col-sm-12 d-flex">
                                            <input class="btn btn-success mx-auto mx-md-0 text-white" type="submit" value="Submit">
                                  </form>         
                            </div>
                        </div>
    </div>
</div>